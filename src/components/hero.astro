---
import { Image } from "astro:assets";
---

<section>
  <div class="hero">
    <div class="context">
      <div class="chip">
        <p>New Discord server manging experience</p>
      </div>
      <div>
        <h1>Manage your server</h1>
        <h1 style="color: var(--text-subheading);">Like a Pro!</h1>
      </div>
      <h4>
        An all purpose customizable bot for moderation, Welcoming, Logs And
        more!
      </h4>
      <div class="btn-group">
        <a class="btn">Add To Discord</a>
        <a class="btn btn-secondary">Browse Features</a>
      </div>
    </div>
    <Image
      loading="eager"
      width={228}
      height={228}
      src="/awfixer.png"
      alt="logo"
    />
  </div>
  <div class="wave"></div>
</section>

<style>
  section {
    position: relative;
  }

  .hero {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 128px;
    background-image: url("/hero.png");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .wave {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100px;
    background: linear-gradient(180deg, #000 0%, var(--background) 100%);
  }

  .context {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 32px;
    height: 100vh;
  }

  h4 {
    max-width: 380px;
  }

  .btn-group {
    display: flex;
    flex-direction: row;
    gap: 32px;
  }
</style>
